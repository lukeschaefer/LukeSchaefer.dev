---
import BaseHead from "@/components/BaseHead.astro";
import SideCanvas from "@/components/SideCanvas.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html class="scroll-smooth overflow-x-hidden" lang={siteConfig.lang}>
	<head>
		<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />
	</head>
	<body
		class="site-body bg-global-bg text-global-text mx-auto flex min-h-screen max-w-3xl flex-col px-4 font-mono text-sm font-normal antialiased sm:px-8 relative"
	>
		<ThemeProvider />
		<SkipLink />
		<Header />
		<SideCanvas />
		<main id="main">
			<slot />
		</main>
		<Footer />
		<style is:global>
			.site-body {
				padding-top: 0.5rem;
			}

			.site-body header {
				margin-top: 0.5rem;
				margin-bottom: 0.75rem;
			}

			@media (min-width: 1000px) {
				.site-body {
					padding-top: 4rem;
				}

				.site-body header {
					margin-top: 2rem;
					margin-bottom: 3rem;
				}
			}
		</style>
	</body>
</html>
